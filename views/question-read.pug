extends layout 

block content 
    h1.totalQs #{questions.length} Questions 
    each question in questions 
        hr 
        //- div.qStats 
        //-     div.votes 
        //-         p #{questions.Vote.voteTotal} votes
        //-     div.answers 
        //-         p #{questions.Answer.length} answers
        .questionBox 
            a(href=`/questions/${question.id}`)= question.title 
            .Qpreview= question.preview 
            .Qusername Posted by #{question.User.username}
            - const options = { month: 'short', day: 'numeric', year: 'numeric'}
            .Qoptions= question.createdAt.toLocaleString('en-US', options)
