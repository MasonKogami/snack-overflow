Table users {
  id int
  username varchar
  hashedPassword varchar
  email varchar
  bio text
  image_link varchar
  created_at datetime
  updated_at datetime
} 

Table questions {
  id int
  user_id int
  image_link1 varchar
  image_link2 varchar
  image_link3 varchar
  title varchar
  body text
  created_at datetime
  updated_at datetime
}

Table answers {
  id int
  user_id int
  question_id int
  body text
  image_link1 varchar
  image_link2 varchar
  image_link3 varchar
  created_at datetime
  updated_at datetime
}

Table votes {
  id int
  user_id int
  value smallint
  answer_id int
  created_at datetime
  updated_at datetime
}

// Creating references
// You can also define relaionship separately
// > many-to-one; < one-to-many; - one-to-one

Ref: users.id < questions.user_id
Ref: users.id < answers.user_id
Ref: questions.id < answers.question_id
Ref: users.id < votes.user_id
Ref: answers.id < votes.answer_id

// take every vote record
// where answer_id matches the 
// answer id
// sum them

